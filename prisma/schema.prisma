// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["multiSchema"]
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
  schemas = ["public"]
}

model Band {
  id              String   @id @default(uuid())
  name            String
  slug            String   @unique
  origin          String?
  bio             String?  @db.Text
  bio2            String?  @db.Text
  genre           String?
  instagramHandle String?

  pictures        Picture[]
  links           Link[]

  @@schema("public")
}

model Venue {
  id              String   @id @default(uuid())
  name            String
  address         String
  city            String
  state           String
  zip             String

  pictures        Picture[]
  links           Link[]

  @@schema("public")
}

model Picture {
  id           String   @id @default(uuid())
  filename     String
  height       Int      @default(0) // Assuming height is an integer number of pixels
  width        Int      @default(0) // Assuming width is an integer number of pixels
  takenAt      DateTime @db.Timestamptz(3) 
  isZine       Boolean  @default(false)  // Picture is featured on homepage
  fStop        String?
  exposureTime String?
  ISO          String?

  bandId       String?  
  venueId      String?  

  band         Band?    @relation(fields: [bandId], references: [id], onDelete: SetNull)
  venue        Venue?   @relation(fields: [venueId], references: [id], onDelete: SetNull)

  @@schema("public")
}

enum Platform {
  Instagram
  YouTube
  Bandcamp
  Spotify
  Facebook
  Twitter
  Internet
  Soundcloud
  Apple_Music
  YouTube_Music
  SXSW

  @@schema("public")
}

enum LinkType {
  Profile
  Video
  Playlist
  Album
  Tour
  Other
  Socials
  Streaming
  Internet

  @@schema("public")
}

model Link {
  id          String   @id @default(uuid())
  url         String @db.VarChar(255)
  platform    Platform
  linkType    LinkType

  bandId      String?
  venueId     String?

  band        Band?    @relation(fields: [bandId], references: [id], onDelete: SetNull)
  venue       Venue?   @relation(fields: [venueId], references: [id], onDelete: SetNull)

  @@schema("public")
}